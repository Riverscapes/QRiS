    "version": "0.2.0",
    "configurations": [
        {
            // You need to enable QGIS VSCode debugger plugin 
            // Before this will work
            "name": "üêû Debug",
            "type": "debugpy",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
        },
        {
            "name": "üì¶ Deploy",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/deploy.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "Standalone Main Window",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/MainWindow.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
    ]
}